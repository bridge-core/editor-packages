{
	"deno.enable": true,
	"deno.lint": false,
	"deno.unstable": false,
	"deno.importMap": "importMap.json",

	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,

	"json.schemas": [
		{
			"fileMatch": ["packages/*/preset/**/manifest.json"],
			"url": "/packages/common/schema/bridge/preset/main.json"
		},
		{
			"fileMatch": ["packages/*/themes/**/*.json"],
			"url": "/packages/common/schema/bridge/theme/main.json"
		},
		{
			"fileMatch": ["packages/*/fileDefinition/**/*.json"],
			"url": "/packages/common/schema/bridge/fileDefinition/main.json"
		}
	]
}
