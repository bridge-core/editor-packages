{
	"format_version": "1.20.80",
	"minecraft:item": {
		"description": {
			"identifier": "{{PROJECT_PREFIX}}:{{IDENTIFIER}}",
			"menu_category": {
				"category": "equipment",
				"group": "itemGroup.name.shovel"
			}
		},
		"components": {
			"minecraft:max_stack_size": 1,
			"minecraft:hand_equipped": true,
			"minecraft:durability": {
				"max_durability": 250
			},
			"minecraft:damage": 1,
			"minecraft:enchantable": {
				"value": 14,
				"slot": "shovel"
			},
            		"minecraft:repairable": {
                		"repair_items": [
                    			{
                        			"items": [
                            				"{{PROJECT_PREFIX}}:{{IDENTIFIER}}"
                        			],
                        			"repair_amount": "context.other->query.remaining_durability + 0.12 * context.other->query.max_durability"
                    			}
                		]
            		},
			"minecraft:digger": {
				"use_efficiency": true,
				"destroy_speeds": [
					{
						"block": {
							"tags": "query.any_tag('dirt', 'sand', 'gravel', 'grass', 'snow')"
						},
						"speed": 6
					}
				]
			},
			"minecraft:icon": "{{PROJECT_PREFIX}}_{{IDENTIFIER}}",
			"minecraft:tags": {
				"tags": ["minecraft:is_shovel"]
			}
		}
	}
}
