{
	"name": "Material",
	"icon": "mdi-texture",
	"description": "Creates a blank material file.",
	"category": "fileType.simpleFile",
	"requires": {
		"packTypes": ["resourcePack"]
	},
	"additionalModels": {
		"PRESET_PATH": "RP/materials/"
	},
	"fields": [["File Name", "FILE_NAME", { "validate": ["required"] }]],

	"createFiles": [
		[
			"material.material",
			"{{PRESET_PATH}}{{FILE_NAME}}.material",
			{ "inject": ["FILE_NAME", "PRESET_PATH"], "openFile": true }
		]
	]
}
