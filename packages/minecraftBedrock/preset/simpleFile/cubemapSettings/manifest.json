{
    "name": "Cubemap Settings",
    "icon": "mdi-cube-unfolded",
    "description": "Creates a blank cubemap settings.",
    "category": "fileType.simpleFile",
    "showIfDisabled": false,
    "requires": {
        "packTypes": [
            "resourcePack"
        ],
        "targetVersion": [
            ">=",
            "1.21.130"
        ]
    },
    "additionalModels": {
        "PRESET_PATH": "cubemaps/"
    },
    "fields": [
        [
            "File Name",
            "FILE_NAME",
            {
                "validate": [
                    "required",
                    "alphanumeric",
                    "lowercase"
                ]
            }
        ]
    ],
    "createFiles": [
        [
            "cubemapSettings.json",
            "{{PRESET_PATH}}{{FILE_NAME}}.json",
            {
                "inject": [
                    "FILE_NAME",
                    "PRESET_PATH"
                ],
                "openFile": true,
                "packPath": "resourcePack"
            }
        ]
    ]
}