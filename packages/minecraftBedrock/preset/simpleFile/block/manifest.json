{
	"name": "Block",
	"icon": "deployed_code",
	"description": "Creates a blank block.",
	"category": "fileType.simpleFile",
	"requires": {
		"packTypes": ["behaviorPack"]
	},
	"additionalModels": {
		"PRESET_PATH": "blocks/"
	},
	"fields": [
		[
			"File Name",
			"FILE_NAME",
			{ "validate": ["required", "alphanumeric", "lowercase"] }
		]
	],

	"createFiles": [
		[
			"block.json",
			"{{PRESET_PATH}}{{FILE_NAME}}.json",
			{
				"inject": ["FILE_NAME", "PRESET_PATH"],
				"openFile": true,
				"packPath": "behaviorPack"
			}
		]
	]
}
