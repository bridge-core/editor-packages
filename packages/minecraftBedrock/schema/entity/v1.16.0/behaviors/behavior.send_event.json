{
	"$schema": "http://json-schema.org/draft-07/schema",
	"additionalProperties": false,
	"description": "Allows the mob to send an event to another mob.",
	"type": "object",
	"title": "Send Event",
	"properties": {
		"priority": { "$ref": "../../general/behaviorPriority.json" },
		"event_choices": {
			"title": "Event Choices",
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"properties": {
					"min_activation_range": {
						"title": "Minimum Activation Range",
						"type": "number"
					},
					"max_activation_range": {
						"title": "Maximum Activation Range",
						"type": "number"
					},
					"cooldown_time": {
						"title": "Cooldown Time",
						"type": "number"
					},
					"cast_duration": {
						"title": "Cast Duration",
						"description": "Time in seconds for the entire event sending process.",
						"type": "number"
					},
					"particle_color": {
						"title": "Particle Color",
						"anyOf": [
							{
								"type": "integer"
							},
							{
								"$ref": "../../../general/hexColor.json"
							}
						]
					},
					"weight": {
						"title": "Weight",
						"type": "number"
					},
					"filters": {
						"title": "Filters",
						"$ref": "../../general/filter.json"
					},
					"start_sound_event": {
						"title": "Start Sound Event",
						"type": "string",
						"$ref": "../../../general/reference/soundEvent.json"
					},
					"sequence": {
						"title": "Sequence",
						"type": "array",
						"items": {
							"type": "object",
							"additionalProperties": false,
							"properties": {
								"base_delay": {
									"title": "Base Delay",
									"description": "Amount of time in seconds before starting this step.",
									"type": "number",
									"default": 0.0
								},
								"event": {
									"title": "Event",
									"description": "The event to send to the entity.",
									"type": "string"
								},
								"sound_event": {
									"title": "Sound Event",
									"description": "The sound event to play when this step happens.",
									"type": "string",
									"$ref": "../../../general/reference/soundEvent.json"
								}
							}
						}
					}
				}
			}
		}
	}
}