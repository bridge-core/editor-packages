{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"filters": {
			"title": "Filters",
			"description": "A filter allows you to set a condition for the event to trigger.",
			"anyOf": [
				{
					"type": "object",
					"$ref": "./filter.json"
				},
				{
					"type": "array",
					"items": {
						"type": "object",
						"$ref": "./filter.json"
					}
				}
			]
		},
		"target": {
			"title": "Target",
			"description": "Target to trigger the event on.",
			"type": "string",
			"$ref": "../../general/filter/subject.json"
		}
	},
	"allOf": [
		{
			"if": {
				"anyOf": [
					{
						"properties": {
							"target": {
								"const": "self",
								"required": ["target"]
							}
						}
					},
					{
						"properties": {
							"target": {
								"not": {
									"type": "string"
								}
							}
						}
					}
				]
			},
			"then": {
				"properties": {
					"event": {
						"title": "Event",
						"$ref": "../dynamic/currentContext/eventEnum.json",
						"description": "Identifier of the event to trigger."
					}
				}
			}
		},
		{
			"if": {
				"properties": {
					"target": {
						"enum": [
							"other",
							"target",
							"baby",
							"parent",
							"holder",
							"player"
						]
					}
				},
				"required": ["target"]
			},
			"then": {
				"properties": {
					"event": {
						"title": "Event",
						"$ref": "../dynamic/eventEnum.json",
						"description": "Identifier of the event to trigger."
					}
				}
			}
		},
		{
			"if": {
				"properties": {
					"target": {
						"const": "block"
					}
				},
				"required": ["target"]
			},
			"then": {
				"properties": {
					"event": {
						"title": "Event",
						"$ref": "../../block/dynamic/eventEnum.json",
						"description": "Identifier of the event to trigger."
					}
				}
			}
		}
	]
}
