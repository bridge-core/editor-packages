{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"minecraft:block": {
			"title": "Block Definition",
			"required": ["description"],
			"type": "object",
			"properties": {
				"description": {
					"title": "Description",
					"$ref": "../description.json"
				},
				"components": {
					"title": "Components",
					"allOf": [
						{
							"$ref": "../dynamic/customComponents.json"
						},
						{
							"$ref": "./components/_main.json"
						}
					]
				}
			},
			"additionalProperties": false
		}
	}
}
