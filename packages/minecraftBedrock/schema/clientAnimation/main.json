{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Client Animation",
	"required": ["format_version", "animations"],
	"definitions": {
		"frame": {
			"anyOf": [
				{
					"type": "array",
					"minItems": 3,
					"maxItems": 3,
					"items": {
						"anyOf": [
							{
								"$ref": "../general/degree.json"
							},
							{
								"$ref": "../molang/embedded.json"
							}
						]
					}
				},
				{
					"type": "object",
					"additionalProperties": false,
					"patternProperties": {
						"[0-9]+.?[0-9]*": {
							"anyOf": [
								{
									"type": "array",
									"minItems": 3,
									"maxItems": 3,
									"items": {
										"anyOf": [
											{
												"$ref": "../general/degree.json"
											},
											{
												"$ref": "../molang/embedded.json"
											}
										]
									}
								},
								{
									"type": "object",
									"additionalProperties": false,
									"properties": {
										"pre": {
											"title": "Pre Animation",
											"type": "array",
											"minItems": 3,
											"maxItems": 3,
											"items": {
												"type": "number"
											}
										},
										"post": {
											"title": "Post Animation",
											"type": "array",
											"minItems": 3,
											"maxItems": 3,
											"items": {
												"type": "number"
											}
										},
										"lerp_mode": {
											"title": "Linear Interpolation Mode",
											"type": "string",
											"enum": ["catmullrom", "linear"]
										}
									}
								},
								{
									"$ref": "../molang/embedded.json"
								}
							]
						}
					}
				}
			]
		},
		"particle_effect": {
			"additionalProperties": false,
			"required": ["effect"],
			"type": "object",
			"properties": {
				"effect": {
					"title": "Effect",
					"anyOf": [
						{
							"$ref": "../clientEntity/dynamic/particleReferenceEnum.json"
						},
						{
							"$ref": "../attachable/dynamic/particleReferenceEnum.json"
						}
					]
				},
				"locator": {
					"title": "Locator",
					"$ref": "../geometry/dynamic/locatorEnum.json"
				},
				"pre_effect_script": {
					"title": "Pre Effect Script",
					"$ref": "../molang/embedded.json"
				},
				"bind_to_actor": {
					"title": "Bind To Actor",
					"type": "boolean"
				}
			}
		},
		"sound_effect": {
			"additionalProperties": false,
			"required": ["effect"],
			"type": "object",
			"properties": {
				"effect": {
					"title": "Effect",
					"description": "Valid sound effect names should be listed in the entity's resource_definition json file.",
					"anyOf": [
						{
							"$ref": "../clientEntity/dynamic/soundEffectReferenceEnum.json"
						},
						{
							"$ref": "../attachable/dynamic/soundEffectReferenceEnum.json"
						}
					]
				},
				"locator": {
					"title": "Locator",
					"description": "The name of a locator on the actor where the sound should originate from.",
					"$ref": "../geometry/dynamic/locatorEnum.json"
				}
			}
		}
	},
	"type": "object",
	"properties": {
		"format_version": {
			"title": "Format Version",
			"$ref": "../project/formatVersionEnum.json"
		},
		"animations": {
			"title": "Animations",
			"type": "object",
			"additionalProperties": false,
			"patternProperties": {
				"^animation\\..+$": {
					"type": "object",
					"properties": {
						"animation_length": {
							"title": "Animation Length",
							"type": "number"
						},
						"start_delay": {
							"title": "Start Delay",
							"$ref": "../molang/embedded.json"
						},
						"loop": {
							"title": "Loop",
							"enum": [true, false, "hold_on_last_frame"]
						},
						"loop_delay": {
							"title": "Loop Delay",
							"$ref": "../molang/embedded.json"
						},
						"anim_time_update": {
							"title": "Animation Time Update",
							"$ref": "../molang/embedded.json"
						},
						"blend_weight": {
							"title": "Blend Weight",
							"$ref": "../molang/embedded.json"
						},
						"override_previous_animation": {
							"title": "Override Previous Animation",
							"type": "boolean"
						},
						"bones": {
							"title": "Bones",
							"type": "object",
							"patternProperties": {
								".*": {
									"type": "object",
									"properties": {
										"rotation": {
											"title": "Rotation",
											"$ref": "#/definitions/frame"
										},
										"scale": {
											"title": "Scale",
											"oneOf": [
												{
													"$ref": "#/definitions/frame"
												},
												{
													"$ref": "../molang/embedded.json"
												}
											]
										},
										"position": {
											"title": "Position",
											"$ref": "#/definitions/frame"
										}
									}
								}
							}
						},
						"particle_effects": {
							"title": "Particle Effects",
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"oneOf": [
										{
											"$ref": "#/definitions/particle_effect"
										},
										{
											"type": "array",
											"items": {
												"$ref": "#/definitions/particle_effect"
											}
										}
									]
								}
							}
						},
						"sound_effects": {
							"title": "Sound Effects",
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"oneOf": [
										{
											"$ref": "#/definitions/sound_effect"
										},
										{
											"type": "array",
											"items": {
												"$ref": "#/definitions/sound_effect"
											}
										}
									]
								}
							}
						},
						"timeline": {
							"title": "Timeline",
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"$ref": "../molang/embedded.json"
								}
							}
						}
					}
				}
			}
		}
	}
}
