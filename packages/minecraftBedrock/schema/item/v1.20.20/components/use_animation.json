{
	"$schema": "http://json-schema.org/draft-07/schema",
	"description": "The animation to use when this item is being used, e.g when the item is being eaten.",
	"anyOf": [
		{
			"type": "string",
			"enum": [
				"block",
				"bow",
				"brush",
				"camera",
				"crossbow",
				"eat",
				"drink",
				"none",
				"spear",
				"spyglass"
			]
		},
		{
			"type": "object",
			"properties": {
				"value": {
					"type": "string",
					"enum": [
						"block",
						"bow",
						"brush",
						"camera",
						"crossbow",
						"eat",
						"drink",
						"none",
						"spear",
						"spyglass"
					]
				}
			}
		}
	]
}
