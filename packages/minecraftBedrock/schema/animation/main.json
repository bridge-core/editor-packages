{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Server Animation",
	"required": ["format_version", "animations"],
	"type": "object",
	"properties": {
		"format_version": {
			"title": "Format Version",
			"$ref": "../project/formatVersionEnum.json"
		},
		"animations": {
			"title": "Animations",
			"propertyNames": {
				"pattern": "^animation\\..+$"
			},
			"patternProperties": {
				"^animation\\..+$": {
					"type": "object",
					"properties": {
						"animation_length": {
							"title": "Animation Length",
							"type": "number"
						},
						"start_delay": {
							"title": "Start Delay",
							"$ref": "../molang/embedded.json"
						},
						"loop": {
							"title": "Loop",
							"enum": [true, false, "hold_on_last_frame"]
						},
						"loop_delay": {
							"title": "Loop Delay",
							"$ref": "../molang/embedded.json"
						},
						"timeline": {
							"title": "Timeline",
							"propertyNames": {
								"pattern": "^\\d+(\\.\\d+)?$"
							},
							"patternProperties": {
								"^\\d+(\\.\\d+)?$": {
									"type": "array",
									"items": {
										"$ref": "../general/reference/animationEvent.json"
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
