{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Client Blocks",
	"required": ["format_version"],
	"additionalProperties": false,
	"type": "object",
	"properties": {
		"format_version": {
			"title": "Format Version",
			"type": "array",
			"minItems": 3,
			"maxItems": 3,
			"items": {
				"type": "integer"
			}
		}
	},
	"patternProperties": {
		".*": {
			"additionalProperties": false,
			"type": "object",
			"properties": {
				"sound": {
					"title": "Sound",
					"$ref": "../general/vanilla/blockSound.json"
				},
				"brightness_gamma": {
					"title": "Brightness Gamma",
					"type": "number"
				},
				"isotropic": {
					"title": "Isotropic",
					"anyOf": [
						{
							"type": "boolean"
						},
						{
							"type": "object",
							"additionalProperties": false,
							"properties": {
								"up": {
									"title": "Up",
									"type": "boolean"
								},
								"down": {
									"title": "Down",
									"type": "boolean"
								},
								"side": {
									"title": "Side",
									"type": "boolean"
								},
								"north": {
									"title": "North",
									"type": "boolean"
								},
								"south": {
									"title": "South",
									"type": "boolean"
								},
								"east": {
									"title": "East",
									"type": "boolean"
								},
								"west": {
									"title": "West",
									"type": "boolean"
								}
							}
						}
					]
				},
				"textures": {
					"title": "Textures",
					"anyOf": [
						{
							"$ref": "../general/reference/terrainTexture.json"
						},
						{
							"type": "object",
							"additionalProperties": false,
							"properties": {
								"up": {
									"title": "Up",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"down": {
									"title": "Down",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"side": {
									"title": "Side",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"north": {
									"title": "North",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"south": {
									"title": "South",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"east": {
									"title": "East",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"west": {
									"title": "West",
									"$ref": "../general/reference/terrainTexture.json"
								}
							}
						}
					]
				},
				"carried_textures": {
					"title": "Carries Textures",
					"anyOf": [
						{
							"$ref": "../general/reference/terrainTexture.json"
						},
						{
							"type": "object",
							"additionalProperties": false,
							"properties": {
								"up": {
									"title": "Up",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"down": {
									"title": "Down",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"side": {
									"title": "Side",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"north": {
									"title": "North",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"south": {
									"title": "South",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"east": {
									"title": "East",
									"$ref": "../general/reference/terrainTexture.json"
								},
								"west": {
									"title": "West",
									"$ref": "../general/reference/terrainTexture.json"
								}
							}
						}
					]
				}
			}
		}
	}
}
