{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Server Animation Controller",
	"required": ["format_version", "animation_controllers"],
	"type": "object",
	"properties": {
		"format_version": {
			"title": "Format Version",
			"$ref": "../project/formatVersionEnum.json"
		},
		"animation_controllers": {
			"title": "Animation Controllers",
			"propertyNames": {
				"pattern": "^controller.animation\\..+$"
			},
			"patternProperties": {
				"^controller.animation\\..+$": {
					"type": "object",
					"properties": {
						"initial_state": {
							"title": "Initial State",
							"$ref": "./dynamic/currentContext/stateEnum.json"
						},
						"states": {
							"title": "States",
							"type": "object",
							"patternProperties": {
								".+": {
									"type": "object",
									"properties": {
										"animations": {
											"title": "Animations",
											"type": "array",
											"items": {
												"anyOf": [
													{
														"$ref": "../entity/dynamic/animationEnum.json"
													},
													{
														"type": "object",
														"propertyNames": {
															"$ref": "../entity/dynamic/animationEnum.json"
														},
														"patternProperties": {
															".+": {
																"type": "string"
															}
														}
													}
												]
											}
										},
										"transitions": {
											"title": "Transitions",
											"type": "array",
											"items": {
												"type": "object",
												"propertyNames": {
													"$ref": "./dynamic/currentContext/stateEnum.json"
												},
												"patternProperties": {
													".+": {
														"$ref": "../molang/embedded.json"
													}
												}
											}
										},
										"on_entry": {
											"title": "Event: On Entry",
											"description": "Events and commands to run when entering this state.",
											"type": "array",
											"items": {
												"$ref": "../general/reference/animationEvent.json"
											}
										},
										"on_exit": {
											"title": "Event: On Exit",
											"description": "Events and commands to run when exiting this state.",
											"type": "array",
											"items": {
												"$ref": "../general/reference/animationEvent.json"
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
