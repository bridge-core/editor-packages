{
	"id": "recipe",
	"icon": "mdi-book-outline",
	"detect": {
		"scope": "BP/recipes/",
		"matcher": ["BP/recipes/**/*.json", "BP/recipes/*.json"]
	},

	"schema": "file:///data/packages/minecraftBedrock/schema/recipe/main.json",
	"lightningCache": "recipe.json",

	"definitions": {
		"itemIdentifier": [
			{
				"from": "item",
				"match": "identifier"
			},
			{
				"from": "clientItem",
				"match": "identifier"
			}
		]
	},
	"documentation": {
		"baseUrl": "https://bedrock.dev/docs/stable/Recipes",
		"supportsQuerying": false
	},
	"highlighterConfiguration": {
		"variables": [
			"description",
			"tags",
			"groups",
			"result",
			"pattern",
			"key",
			"ingredients",
			"input",
			"output",
			"reagent"
		],
		"typeIdentifiers": ["format_version"]
	}
}
